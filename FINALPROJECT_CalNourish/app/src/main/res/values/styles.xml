<resources>

<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="android:windowBackground">@color/whiteish</item>
    <item name="android:textColorPrimary">@color/textColor</item>
    <item name="android:textColorSecondary">@color/textColor</item>
    <item name="android:textSize">14sp</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/calNourishAccent</item>
</style>

<style name="heading">
    <item name="android:textAllCaps">true</item>
</style>

<style name="mainHeading" parent="heading">
    <item name="android:textSize">36sp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:layout_marginBottom">16dp</item>
</style>

<style name="congressional_view_name">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">24sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center_vertical</item>
</style>

<style name="congressional_view_party">
    <item name="android:textColor">@color/textColor</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textSize">18sp</item>
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:layout_marginBottom">5dp</item>
</style>

<style name="appDescription">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:layout_marginBottom">16dp</item>
</style>

<style name="whiteBackground">
    <item name="android:background">@color/white</item>
</style>

<style name="roundedWhiteBackground">
    <item name="android:background">@drawable/rounded_white_background</item>
</style>

<style name="buttonSolid" parent="heading">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">14sp</item>
    <item name="android:background">@drawable/button_solid</item>
    <item name="android:minHeight">0dp</item>
</style>

<style name="buttonOutlined" parent="buttonSolid">
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:background">@drawable/button_outlined</item>
</style>

<style name="buttonOutlinedGray" parent="buttonSolid">
    <item name="android:textColor">@color/textColorLight</item>
    <item name="android:background">@drawable/button_outlined_gray</item>
</style>

    
</resources>
