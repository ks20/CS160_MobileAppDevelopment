<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/senator1Image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/dummyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/moreDetails"
        android:layout_marginRight="95dp"
        android:layout_below="@+id/senator1Image"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/senator2Image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/line"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/senator1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/dummyText"
        android:layout_marginTop="40dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/senator1Party"
        android:layout_width="wrap_content"
        android:text=""
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/senator1"
        android:layout_below="@+id/senator1"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/senator1Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/senator1Party"
        android:layout_below="@+id/senator1Party"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="#000000" />

    <TextView
        android:id="@+id/senator1Web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/senator1Email"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/senator1Email"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="#000000" />

    <Button
        android:id="@+id/moreDetails"
        style="?android:textAppearanceSmall"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/senator1Image"
        android:layout_marginRight="5sp"
        android:layout_alignParentEnd="true"
        android:layout_weight="1"
        android:background="@drawable/test"
        android:text="More Details"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <Button
        android:id="@+id/moreDetails2"
        style="?android:textAppearanceLarge"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5sp"
        android:layout_below="@+id/senator2Image"
        android:layout_weight="1"
        android:background="@drawable/test"
        android:text="More Details"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/line"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/moreDetails"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/senator2"
        android:layout_width="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_alignStart="@+id/dummyText"
        android:layout_centerVertical="true"
        android:text=""
        android:textColor="#000000" />

    <TextView
        android:id="@+id/senator2Party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/senator2"
        android:layout_below="@+id/senator2"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="#000000" />

    <TextView
        android:id="@+id/senator2Web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_alignStart="@+id/senator2"
        android:layout_below="@+id/senator2Email"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/senator2Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_below="@+id/senator2Party"
        android:layout_alignStart="@+id/senator1Web"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#1C2C68"
        android:layout_below="@+id/senator2Image"
        android:text="Latitude: " />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1C2C68"
        android:layout_below="@+id/textView2"
        android:text="Longitude: " />

</RelativeLayout>